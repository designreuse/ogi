<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>delivery-database</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:ogi-database</include>
            </includes>
            
            <!-- Le projet batch dÃ©clare un artefact de type zip contenant le livrable -->
            <binaries>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>${envelopeName}/database</outputDirectory>
                        <!-- Ne pas utiliser l'archive principal du projet -->
                        <useProjectArtifact>false</useProjectArtifact>
                        <!-- Utiliser les artefact secondaire du projet bdd -->
                        <useProjectAttachments>true</useProjectAttachments>
                        <unpack>true</unpack> <!-- Dezip -->
                        <includes>
                            <include>*:zip</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>